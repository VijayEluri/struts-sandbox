 <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://struts.apache.org/dtds/tiles-config_2_0.dtd">

<!-- Definitions for Tiles quick tests  -->

<tiles-definitions>

  <!-- Test instances -->
<definition name="test.home.page" extends="doc.mainLayout" >
  <put name="title"  value="Tiles: test page" />
  <put name="body"   value="/test/testAll.jsp" />
</definition>

  <!-- Test menu definition -->
<definition name="test.menu.links" template="/layouts/menu.jsp" >
  <put name="sectionTitle" value="Tests" />
    <putList name="items" >
      <item value="All in one"     link="/test/index.jsp"  />
      <item value="Basic" link="/test/testBasic.jsp" />
      <item value="Ignore attribute"  link="/test/testIgnore.jsp"   />
      <item value="Definition"  link="/test/testDefinitions.jsp"    />
      <item value="Role" link="/test/testRole.jsp"      />
      <item value="Struts action"  link="/test/testStrutsAction.jsp"   />
      <item value="Controller"    link="/test/testController.jsp"     />
    </putList>
</definition>

  <!-- Test instances -->
<definition name="test.layout.test1" template="/test/layout.jsp" >
  <put name="title"  value="Test definition from factory : basic" />
  <put name="header" value="header.jsp" />
  <put name="body"   value="body.jsp" />
</definition>

  <!-- Test instances -->
<definition name="test.layout.test2" template="/test/layout.jsp" >
  <put name="title"  value="Test definition from factory : specify types"   type="string" />
  <put name="header" value="header.jsp" type="template"   />
  <put name="body"   value="body.jsp"   type="template"   />
</definition>

  <!-- Test instances -->
<definition name="test.layout.test3" template="/test/layout.jsp" >
  <put name="title"  value="Test definition from factory : Test with a tag body (to do)" />
  <put name="header" value="This is a header" type="string"/>
  <put name="body"   value="body.jsp"/>
</definition>

  <!-- Test backward compatibility -->
<definition name="test.layout.test4" template="/test/layout.jsp" >
    <put name="title"  value="Test definition from factory: backward compatibility"
         type="string"/>
  <put name="header" value="header.jsp"/>
  <put name="body"   value="body.jsp" />
</definition>

  <!-- Test Struts Action and Tiles integration -->
<definition name="test.struts.action" template="/test/layout.jsp" >
    <put name="title"  value="Test Struts Action and Tiles integration: default title"
         type="string"/>
  <put name="header" value="header.jsp"/>
  <put name="body"   value="body.jsp" />
</definition>

  <!-- Test Struts Action and Tiles integration -->
<definition name="test.struts.action.fail" template="/test/failpage.jsp" >
  <put name="title"  value="Test fail" type="string" />
</definition>

  <!-- Test Tiles Controller -->
  <definition name="test.struts.controller"
              template="/test/layout.jsp"
      preparer="org.apache.struts.webapp.tiles.test.TestTileController" >
  <put name="title"  value="Test Tile Controller : call to Controller" />
  <put name="header" value="header.jsp"/>
  <put name="body"   value="body.jsp" />
</definition>

  <!-- Test body for put tag -->
<definition name="test.body" template="/test/failpage.jsp" >
  <put name="title"  type="string">first body : title</put>
  <put name="body"  type="string">second body : body</put>
</definition>

  <!-- Test instances -->
<definition name="test.action.noforward" template="/test/layout.jsp" >
  <put name="title"  value="Test Action with No Forward" />
  <put name="header" value="header.jsp" />
  <put name="body"   value="showRequestUri.jsp" />
</definition>


</tiles-definitions>
